---
import Base from '@/layouts/Base.astro';
import Section from '@/layouts/Section.astro';
import PropertyCard from '@/components/PropertyCard.astro';
import Gallery from '@/components/Gallery.tsx';
import WhatsAppButton from '@/components/WhatsAppButton.astro';
import Badge from '@/components/Badge.astro';
import Price from '@/components/Price.astro';
import Icon from '@/components/Icon.astro';
import { properties } from '@/data/properties';
import { filterProperties } from '@/lib/filters';
import { formatPrice, formatM2, formatDate } from '@/lib/format';
import { createPropertyMessage } from '@/lib/whatsapp';

export async function getStaticPaths() {
  return properties.map(property => ({
    params: { slug: property.slug },
    props: { property }
  }));
}

const { property } = Astro.props;

// Obtener propiedades relacionadas (misma ciudad y tipo)
let relatedProperties = filterProperties(properties, {
  city: property.city,
  type: property.type
}).filter(p => p.id !== property.id);

// Si no hay suficientes propiedades del mismo tipo, agregar de la misma ciudad
if (relatedProperties.length < 4) {
  const cityProperties = filterProperties(properties, {
    city: property.city
  }).filter(p => p.id !== property.id && !relatedProperties.some(rp => rp.id === p.id));
  
  relatedProperties = [...relatedProperties, ...cityProperties];
}

// Si aún no hay suficientes, agregar cualquier propiedad disponible
if (relatedProperties.length < 4) {
  const otherProperties = properties.filter(p => p.id !== property.id && !relatedProperties.some(rp => rp.id === p.id));
  relatedProperties = [...relatedProperties, ...otherProperties];
}

// Tomar exactamente 4 propiedades
relatedProperties = relatedProperties.slice(0, 4);

const whatsappMessage = createPropertyMessage(property);
---

<Base 
  title={property.title}
  description={property.description || `Propiedad ${property.operation} en ${property.city}. ${property.type} con ${property.bedrooms || 0} dormitorios y ${property.bathrooms || 0} baños.`}
  image={property.images[0]}
  canonical={`/propiedad/${property.slug}`}
>
  <!-- Hero Section de la propiedad -->
  <section class="relative bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white">
    <div class="container-custom px-4 sm:px-6 py-12 sm:py-16">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-6">
          <div class="flex items-center space-x-2 text-sm text-gray-300">
            <a href="/" class="hover:text-white transition-colors">Inicio</a>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <a href={`/${property.operation === 'venta' ? 'ventas' : 'alquileres'}`} class="hover:text-white transition-colors capitalize">{property.operation}</a>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <span class="text-white">{property.title}</span>
          </div>
        </nav>

        <!-- Título y precio -->
        <div class="text-center mb-8">
          <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 leading-tight" style="text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);">
            {property.title}
          </h1>
          <div class="flex items-center justify-center text-gray-300 mb-6">
            <Icon name="location" size="sm" class="mr-2" />
            <span class="text-lg">
              {property.address && `${property.address}, `}
              {property.neighborhood && `${property.neighborhood}, `}
              {property.city}
            </span>
          </div>
          <div class="inline-flex items-center space-x-4">
            <div class="text-3xl sm:text-4xl font-bold text-white" style="text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);">
              {formatPrice(property.price, property.currency)}
            </div>
            <div class={`px-4 py-2 rounded-full text-sm font-semibold uppercase tracking-wider ${
              property.operation === 'venta' 
                ? 'bg-orange-500/90 text-white' 
                : 'bg-gold-500/90 text-white'
            }`}>
              {property.operation}
            </div>
          </div>
        </div>

        <!-- Características principales -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-3xl mx-auto">
          {property.bedrooms && (
            <div class="text-center bg-white/10 backdrop-blur-sm rounded-xl p-4">
              <Icon name="bed" size="lg" class="mx-auto mb-2 text-white" />
              <div class="text-2xl font-bold text-white">{property.bedrooms}</div>
              <div class="text-sm text-gray-300">Dormitorios</div>
            </div>
          )}
          {property.bathrooms && (
            <div class="text-center bg-white/10 backdrop-blur-sm rounded-xl p-4">
              <Icon name="bath" size="lg" class="mx-auto mb-2 text-white" />
              <div class="text-2xl font-bold text-white">{property.bathrooms}</div>
              <div class="text-sm text-gray-300">Baños</div>
            </div>
          )}
          {(property.totalM2 || property.coveredM2) && (
            <div class="text-center bg-white/10 backdrop-blur-sm rounded-xl p-4">
              <Icon name="ruler" size="lg" class="mx-auto mb-2 text-white" />
              <div class="text-2xl font-bold text-white">{property.totalM2 || property.coveredM2}</div>
              <div class="text-sm text-gray-300">m²</div>
            </div>
          )}
          {property.parking && (
            <div class="text-center bg-white/10 backdrop-blur-sm rounded-xl p-4">
              <Icon name="car" size="lg" class="mx-auto mb-2 text-white" />
              <div class="text-2xl font-bold text-white">{typeof property.parking === 'number' ? property.parking : '1'}</div>
              <div class="text-sm text-gray-300">Cochera</div>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <Section>
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Contenido principal -->
      <div class="lg:col-span-2">
        <!-- Galería -->
        <div class="mb-8">
          <Gallery client:load property={property} />
        </div>
        
        <!-- Descripción -->
        {property.description && (
          <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
              <div class="w-1 h-8 bg-gradient-to-b from-orange-500 to-gold-500 rounded-full mr-4"></div>
              Descripción
            </h2>
            <p class="text-gray-700 leading-relaxed text-lg">{property.description}</p>
          </div>
        )}
        
        <!-- Características detalladas -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8 mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-8 flex items-center">
            <div class="w-1 h-8 bg-gradient-to-b from-orange-500 to-gold-500 rounded-full mr-4"></div>
            Características
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {property.type && (
              <div class="flex justify-between items-center py-3 border-b border-gray-100">
                <span class="text-gray-600 font-medium">Tipo:</span>
                <span class="font-bold text-gray-900 capitalize bg-gray-100 px-3 py-1 rounded-full text-sm">{property.type}</span>
              </div>
            )}
            {property.condition && (
              <div class="flex justify-between items-center py-3 border-b border-gray-100">
                <span class="text-gray-600 font-medium">Estado:</span>
                <span class="font-bold text-gray-900 capitalize bg-gray-100 px-3 py-1 rounded-full text-sm">{property.condition}</span>
              </div>
            )}
            {property.year && (
              <div class="flex justify-between items-center py-3 border-b border-gray-100">
                <span class="text-gray-600 font-medium">Año:</span>
                <span class="font-bold text-gray-900">{property.year}</span>
              </div>
            )}
            {property.orientation && (
              <div class="flex justify-between items-center py-3 border-b border-gray-100">
                <span class="text-gray-600 font-medium">Orientación:</span>
                <span class="font-bold text-gray-900">{property.orientation}</span>
              </div>
            )}
            {property.expenses && (
              <div class="flex justify-between items-center py-3 border-b border-gray-100">
                <span class="text-gray-600 font-medium">Expensas:</span>
                <span class="font-bold text-gray-900">{formatPrice(property.expenses)}</span>
              </div>
            )}
            {property.coveredM2 && property.totalM2 && (
              <div class="flex justify-between items-center py-3 border-b border-gray-100">
                <span class="text-gray-600 font-medium">Superficie cubierta:</span>
                <span class="font-bold text-gray-900">{formatM2(property.coveredM2)}</span>
              </div>
            )}
            {property.totalM2 && property.coveredM2 && (
              <div class="flex justify-between items-center py-3 border-b border-gray-100">
                <span class="text-gray-600 font-medium">Superficie total:</span>
                <span class="font-bold text-gray-900">{formatM2(property.totalM2)}</span>
              </div>
            )}
            {property.listedAt && (
              <div class="flex justify-between items-center py-3 border-b border-gray-100">
                <span class="text-gray-600 font-medium">Publicado:</span>
                <span class="font-bold text-gray-900">{formatDate(property.listedAt)}</span>
              </div>
            )}
          </div>
        </div>
        
        <!-- Amenities -->
        {property.amenities && property.amenities.length > 0 && (
          <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
              <div class="w-1 h-8 bg-gradient-to-b from-orange-500 to-gold-500 rounded-full mr-4"></div>
              Amenities
            </h2>
            <div class="flex flex-wrap gap-3">
              {property.amenities.map(amenity => (
                <div class="bg-gradient-to-r from-gray-100 to-gray-200 text-gray-800 px-4 py-2 rounded-full text-sm font-medium border border-gray-200">
                  {amenity}
                </div>
              ))}
            </div>
          </div>
        )}
        
        <!-- Características adicionales -->
        {property.features && property.features.length > 0 && (
          <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
              <div class="w-1 h-8 bg-gradient-to-b from-orange-500 to-gold-500 rounded-full mr-4"></div>
              Características Adicionales
            </h2>
            <div class="flex flex-wrap gap-3">
              {property.features.map(feature => (
                <div class="bg-gradient-to-r from-orange-100 to-gold-100 text-orange-800 px-4 py-2 rounded-full text-sm font-medium border border-orange-200">
                  {feature}
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
      
      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <div class="sticky top-4">
          <!-- CTA WhatsApp -->
          <div class="bg-gradient-to-br from-white to-gray-50 rounded-2xl shadow-lg border border-gray-100 p-8 mb-6">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <Icon name="whatsapp" size="lg" class="text-white" />
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">¿Te interesa esta propiedad?</h3>
              <p class="text-gray-600 text-sm">
                Contacta con nosotros para más información o para agendar una visita.
              </p>
            </div>
            <WhatsAppButton message={whatsappMessage} class="w-full justify-center" />
          </div>
          
          <!-- Información de contacto -->
          <div class="bg-gradient-to-br from-white to-gray-50 rounded-2xl shadow-lg border border-gray-100 p-8">
            <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
              <div class="w-1 h-6 bg-gradient-to-b from-orange-500 to-gold-500 rounded-full mr-3"></div>
              Contacto
            </h3>
            <div class="space-y-4">
              <div class="flex items-center bg-white rounded-xl p-4 border border-gray-100">
                <div class="w-10 h-10 bg-gradient-to-br from-orange-500 to-orange-600 rounded-full flex items-center justify-center mr-4">
                  <Icon name="phone" size="sm" class="text-white" />
                </div>
                <div>
                  <div class="text-sm text-gray-500">Teléfono</div>
                  <div class="font-semibold text-gray-900">+54 9 3794 74 0207</div>
                </div>
              </div>
              <div class="flex items-center bg-white rounded-xl p-4 border border-gray-100">
                <div class="w-10 h-10 bg-gradient-to-br from-gray-500 to-gray-600 rounded-full flex items-center justify-center mr-4">
                  <Icon name="location" size="sm" class="text-white" />
                </div>
                <div>
                  <div class="text-sm text-gray-500">Ubicación</div>
                  <div class="font-semibold text-gray-900">San Martin 1127, Corrientes Capital</div>
                </div>
              </div>
              <div class="flex items-center bg-white rounded-xl p-4 border border-gray-100">
                <div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center mr-4">
                  <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <div class="text-sm text-gray-500">Martillero Público</div>
                  <div class="font-semibold text-gray-900">Gastón del Prado</div>
                  <div class="text-xs text-gray-400">M.P. N° 321</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  </Section>
  
  <!-- Propiedades relacionadas -->
  {relatedProperties.length > 0 && (
    <section class="bg-gradient-to-br from-gray-50 to-white py-16">
      <div class="container-custom px-4 sm:px-6">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
              Propiedades Relacionadas
            </h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
              Otras opciones que podrían interesarte en la misma zona
            </p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {relatedProperties.map(relatedProperty => (
              <PropertyCard property={relatedProperty} />
            ))}
          </div>
        </div>
      </div>
    </section>
  )}
</Base>
