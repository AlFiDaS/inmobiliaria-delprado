# Protecci칩n de archivos sensibles
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Protecci칩n de archivos de log
<FilesMatch "\.log$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevenir listado de directorios
Options -Indexes

# Habilitar rewrite engine
RewriteEngine On

# Redirigir rutas de propiedades din치micas a propiedad.html
# Esto permite que /propiedad/[cualquier-slug] funcione en modo est치tico
# Mantiene la URL original pero sirve propiedad.html internamente
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^propiedad/(.+)$ /propiedad.html?slug=$1 [L,QSA]

